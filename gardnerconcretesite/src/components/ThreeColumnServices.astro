---
import Card from './ui/Card.astro';
import Button from './ui/Button.astro';
import services from '../utils/services-data';
---

<section
  class="relative py-20 sm:py-32 bg-concrete-white"
  style="background-image: url('https://www.transparenttextures.com/patterns/concrete-wall.png');"
>
  <div class="absolute inset-0 bg-concrete-white/80"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="font-montserrat font-extrabold text-3xl sm:text-4xl lg:text-5xl text-charcoal-black tracking-tighter">
        Our Quality Services
      </h2>
      <p class="mt-4 max-w-2xl mx-auto text-lg sm:text-xl text-steel-gray font-lato">
        We handle it all, from the ground down. Here's how we can help you build, repair, and beautify your home.
      </p>
    </div>

    <div class="mt-16 grid gap-8 md:grid-cols-3">
      {services.map((service) => (
        <Card class="flex flex-col" key={service.slug}>
          <img src={service.imageUrl} alt={service.name} class="h-40 w-full object-cover rounded-md mb-4" loading="lazy" />
          <div class="flex items-center gap-2">
            <span class="text-3xl">{service.emoji}</span>
            <h3 class="font-poppins font-semibold text-2xl text-charcoal-black">{service.name}</h3>
          </div>
          <p class="mt-3 text-steel-gray">{service.tagline}</p>
          <ul class="mt-4 list-disc list-inside space-y-1 text-steel-gray text-sm flex-grow">
            {service.highlights.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
          <div class="mt-6">
            <Button href={`/services/${service.slug}`} variant="orangeBlack" size="sm">Learn More</Button>
          </div>
        </Card>
      ))}
    </div>
  </div>
</section> 