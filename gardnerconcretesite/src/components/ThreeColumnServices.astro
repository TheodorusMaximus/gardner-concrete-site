---
import ServiceCard from './ServiceCard.astro';
import services from '../utils/services-data';
---

<section
  class="relative py-20 sm:py-32 bg-concrete-white"
  style="background-image: url('https://www.transparenttextures.com/patterns/concrete-wall.png');"
>
  <div class="absolute inset-0 bg-concrete-white/80"></div>
  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="font-montserrat tracking-tighter text-3xl font-extrabold text-charcoal-black sm:text-4xl lg:text-5xl">
        Our Quality Services
      </h2>
      <p class="mt-4 mx-auto max-w-2xl font-lato text-lg text-steel-gray sm:text-xl">
        We handle it all, from the ground down. Here's how we can help you build, repair, and beautify your home.
      </p>
    </div>

    <div class="mt-14 grid gap-8 md:grid-cols-2 lg:mt-16 lg:grid-cols-3">
      {services.map((service) => (
        <ServiceCard
          imageUrl={service.imageUrl}
          emoji={service.emoji}
          title={service.name}
          tagline={service.tagline}
          highlights={service.highlights}
          href={`/services/${service.slug}`}
        />
      ))}
    </div>
  </div>
</section> 