---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

import { createClient, ApiKeyStrategy } from "@wix/sdk";
import * as blogModule from "@wix/blog";

const API_KEY = import.meta.env.WIX_API_KEY;
const SITE_ID = "f34d08e6-ac9c-4e3c-b006-b77d3bf798e6";

let posts = [];

if (API_KEY) {
  try {
    const wixClient = createClient({
      modules: { blog: blogModule },
      auth: ApiKeyStrategy({ apiKey: API_KEY, siteId: SITE_ID }),
    });

    const { posts: fetched } = await wixClient.blog.posts.listPosts({ fieldsets: ["URL"] });
    posts = fetched ?? [];
  } catch (err) {
    console.error("Wix SDK error", err);
  }
}
---

<Layout>
  <div class="min-h-screen flex flex-col">
    <Navbar />

    <main class="flex-1 pt-24 pb-16 bg-white">
      <div class="max-w-4xl mx-auto px-4">
        <h1 class="text-4xl font-bold mb-6 text-primary text-center">Gardner Construction Blog</h1>
        <p class="text-lg text-center text-muted-foreground mb-12">Insights, tips, and project spotlights about foundation repair, waterproofing, and outdoor concrete.</p>

        <div class="space-y-8">
          {posts.length === 0 && (
            <p class="text-center text-muted-foreground">No blog posts found.</p>
          )}
          {posts.map((post) => (
            <article class="border border-gray-100 rounded-lg p-6 hover:shadow-md transition-shadow" key={post.id}>
              <h2 class="text-2xl font-semibold mb-2">
                <a href={post.url?.base + post.url?.path} class="hover:text-primary transition-colors" target="_blank" rel="noopener noreferrer">
                  {post.title}
                </a>
              </h2>
              <p class="text-muted-foreground">{post.excerpt || ""}</p>
            </article>
          ))}
        </div>
      </div>
    </main>

    <Footer />
  </div>
</Layout> 