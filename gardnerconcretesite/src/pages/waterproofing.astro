---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Navbar />
  <main class="min-h-screen pt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <h1 class="text-4xl font-bold text-charcoal-black mb-8">Waterproofing Services</h1>
      <div class="prose prose-lg max-w-none">
        <p class="text-xl text-steel-gray mb-6">
          Professional waterproofing solutions to protect your property from water damage.
        </p>
        <p>
          Our comprehensive waterproofing services include foundation waterproofing, 
          basement waterproofing, and exterior waterproofing solutions. We use proven 
          techniques and high-quality materials to ensure your property stays dry and protected.
        </p>
      </div>
    </div>
  </main>
  <Footer />
</Layout>