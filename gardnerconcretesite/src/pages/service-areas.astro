---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import NeighborhoodTrust from '../components/NeighborhoodTrust.astro';
import ConcreteBookingForm from '../components/ConcreteBookingForm.astro';
---

<Layout>
  <div class="min-h-screen flex flex-col bg-concrete-white">
    <Navbar />

    <main class="flex-grow pt-20">
      <!-- NeighborhoodTrust: hero/story -->
      <NeighborhoodTrust />

      <!-- Static coverage image integrated with content above (two-column on desktop) -->
      <section class="py-12 bg-charcoal-black text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid gap-8 lg:grid-cols-2 items-center">
            <div>
              <h1 class="font-montserrat font-extrabold text-3xl sm:text-4xl mb-4">Our Service Areas</h1>
              <p class="text-gray-300 mb-6">Explore our coverage across the Twin Cities metro. Browse the neighborhoods and ZIPs above, and see the visual coverage map here.</p>
              <p class="text-gray-300">Questions about your location? <a href="/schedule" class="text-bright-yellow underline underline-offset-4 hover:no-underline">Schedule a free assessment</a> and weâ€™ll confirm coverage.</p>
            </div>
            <div class="justify-self-center w-full">
              <div class="rounded-xl overflow-hidden shadow-xl ring-1 ring-white/10 max-w-xl w-full mx-auto">
                <img src="https://pub-023c3e677cc749cd89ec726c78c6178e.r2.dev/3408138C-7B09-4C44-A840-4FE0AF80EAF7_4_5005_c.jpeg" alt="Twin Cities service coverage" class="w-full h-auto object-cover" loading="lazy" />
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA / Booking form -->
      <section class="py-20 bg-gray-50" id="concrete-booking-form">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <ConcreteBookingForm />
        </div>
      </section>
    </main>

    <Footer />
  </div>
</Layout> 