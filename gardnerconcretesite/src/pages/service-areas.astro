---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import NeighborhoodTrust from '../components/NeighborhoodTrust.astro';
import ConcreteBookingForm from '../components/ConcreteBookingForm.astro';
---

<Layout>
  <div class="min-h-screen flex flex-col bg-concrete-white">
    <Navbar />

    <main class="flex-grow pt-20">
      <!-- NeighborhoodTrust: hero/story -->
      <NeighborhoodTrust />

      <!-- Static coverage image directly after hero -->
      <section class="py-12 bg-charcoal-black text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h1 class="text-center font-montserrat font-extrabold text-3xl sm:text-4xl mb-6">Our Service Areas</h1>
          <p class="text-center text-gray-300 mb-6">Explore our coverage across the Twin Cities metro. See the map below and the full ZIP code list that follows.</p>
          <div class="rounded-xl overflow-hidden shadow-xl ring-1 ring-white/10">
            <img src="https://pub-023c3e677cc749cd89ec726c78c6178e.r2.dev/3408138C-7B09-4C44-A840-4FE0AF80EAF7_4_5005_c.jpeg" alt="Twin Cities service coverage" class="w-full h-auto object-cover" loading="lazy" />
          </div>
        </div>
      </section>

      <!-- CTA / Booking form -->
      <section class="py-20 bg-gray-50" id="concrete-booking-form">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <ConcreteBookingForm />
        </div>
      </section>
    </main>

    <Footer />
  </div>
</Layout> 