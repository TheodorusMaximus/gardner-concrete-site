---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import NeighborhoodTrust from '../components/NeighborhoodTrust.astro';
import ConcreteBookingForm from '../components/ConcreteBookingForm.astro';
import ZipCoverageMap from '../components/ZipCoverageMap.astro';
---

<Layout>
  <div class="min-h-screen flex flex-col bg-concrete-white">
    <Navbar />

    <main class="flex-grow pt-20">
      <!-- NeighborhoodTrust: hero/story -->
      <NeighborhoodTrust />

      <!-- Coverage Map below hero -->
      <section class="py-12 bg-charcoal-black text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <h1 class="text-center font-montserrat font-extrabold text-3xl sm:text-4xl mb-6">Our Service Areas</h1>
          <p class="text-center text-gray-300 mb-6">Explore our coverage across the Twin Cities metro. This map highlights ZIP codes we actively serve.</p>
          <ZipCoverageMap height="520px" zipCodes={["55404","55405","55406","55407","55408","55409","55410","55417","55419","55416","55424","55436","55401","55402","55403","55415","55411","55412","55430","55413","55414","55418","55421","55116","55102","55105","55104","55108","55114","55343","55435","55436","55439","55420","55425","55431","55437","55438","55441","55442","55446","55447","55305","55343","55345","55391","55416","55426","55427"]} />
        </div>
      </section>

      <!-- CTA / Booking form -->
      <section class="py-20 bg-gray-50" id="concrete-booking-form">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <ConcreteBookingForm />
        </div>
      </section>
    </main>

    <Footer />
  </div>
</Layout> 