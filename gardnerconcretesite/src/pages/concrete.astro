---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Navbar />
  <main class="min-h-screen pt-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <h1 class="text-4xl font-bold text-charcoal-black mb-8">Concrete Services</h1>
      <div class="prose prose-lg max-w-none">
        <p class="text-xl text-steel-gray mb-6">
          Professional concrete services for residential and commercial projects.
        </p>
        <p>
          From driveways and sidewalks to patios and foundations, we provide comprehensive 
          concrete services using high-quality materials and expert craftsmanship.
        </p>
        
        <h2>Our Concrete Services:</h2>
        <ul>
          <li>Concrete driveways</li>
          <li>Sidewalks and walkways</li>
          <li>Patios and outdoor spaces</li>
          <li>Foundation pours</li>
          <li>Concrete repair and restoration</li>
          <li>Decorative concrete options</li>
        </ul>
      </div>
    </div>
  </main>
  <Footer />
</Layout>